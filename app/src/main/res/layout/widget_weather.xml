<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:textColor="@color/RedThemeColorAccent"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/weather_type_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:gravity="end|center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/RedThemeColorAccent"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/weather_type_icon_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:tint="@color/RedThemeColorAccent" />

    </LinearLayout>

    <TextView android:layout_centerInParent="true"
        android:id="@+id/weather_current_temp_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:textColor="@color/RedThemeColorAccent"
        android:textSize="40sp" />

    <RelativeLayout android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/weather_location_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/ic_my_location_white"
            android:drawableTint="@color/RedThemeColorAccent"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/RedThemeColorAccent"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/weather_max_min_temp_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/RedThemeColorAccent"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

    </RelativeLayout>

</LinearLayout>