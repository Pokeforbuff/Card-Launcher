<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RedThemeColorPrimaryDark"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_card"
        android:overScrollMode="never" />

    <LinearLayout
        android:id="@+id/bottom_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/RedThemeColorPrimary"
            app:cardCornerRadius="5dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/RedThemeColorAccent"
                app:cardCornerRadius="5dp">

                <ImageButton
                    android:id="@+id/shortcut_open_dialer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/RedThemeColorAccent"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/phone"
                    android:tint="@color/RedThemeColorPrimary" />

            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/RedThemeColorPrimary"
            app:cardCornerRadius="5dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/RedThemeColorAccent"
                app:cardCornerRadius="5dp">

                <ImageButton
                    android:id="@+id/shortcut_open_messages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/messages"
                    android:tint="@color/RedThemeColorPrimary"
                    android:backgroundTint="@color/RedThemeColorAccent"
                    android:padding="4dp"
                    android:scaleType="fitCenter" />

            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/RedThemeColorPrimary"
            app:cardCornerRadius="5dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/RedThemeColorAccent"
                app:cardCornerRadius="5dp">

                <ImageButton
                    android:id="@+id/shortcut_open_camera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/camera"
                    android:tint="@color/RedThemeColorPrimary"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/RedThemeColorAccent"
                    android:padding="4dp"
                    android:scaleType="fitCenter" />

            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/RedThemeColorPrimary"
            app:cardCornerRadius="5dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/RedThemeColorAccent"
                app:cardCornerRadius="5dp">

                <ImageButton
                    android:id="@+id/shortcut_open_chrome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/chrome"
                    android:tint="@color/RedThemeColorPrimary"
                    android:backgroundTint="@color/RedThemeColorAccent"
                    android:padding="4dp"
                    android:scaleType="fitCenter" />

            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>